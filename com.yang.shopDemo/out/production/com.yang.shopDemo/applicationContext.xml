    <!--配置拦截器-->
    <mvc:interceptors>
        <mvc:interceptor>
            <!--拦截所有请求-->
            <mvc:mapping path="/" />
            <!--不拦截登陆-->
            <mvc:exclude-mapping path="/login" />
            <!--不拦截注册-->
            <mvc:exclude-mapping path="/register" />
            <!--不拦截静态文件-->
            <mvc:exclude-mapping path="/static/**" />
            <!--指定我们的拦截器-->
            <bean class="com.yang.interceptor.LoginInterceptor" />
        </mvc:interceptor>
